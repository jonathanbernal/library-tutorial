extends layout 

block content 
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for="first_name") First Name:
            input#first_name.form-control(type='text', name='first_name',
placeholder='e.g. John',
value=(undefined === author ? '' : author.first_name))
            label(for="family_name") Family Name:
            input#family_name.form-control(type='text' name='family_name',
placeholder='e.g. Doe', value=(undefined === author ? '' : author.family_name))
            label(for='date_of_birth') Date of Birth:
            input#date_of_birth.form-control(type='date', name='date_of_birth',
placeholder='YYYY-MM-DD', value=(undefined === author ? '' : author.iso_date_of_birth))
            label(for='date_of_death') Date of Death:
            input#date_of_death.form-control(type='date' name='date_of_death',
placeholder='YYYY-MM-DD', value=(undefined === author ? '' : author.iso_date_of_death))
            button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg